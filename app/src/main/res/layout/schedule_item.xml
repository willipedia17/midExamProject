<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="15dp"
    android:layout_marginVertical="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:orientation="vertical"
        android:background="@drawable/button_stroke"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/schedule_image"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/Team1_schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team1"
                android:textColor="@color/black"
                android:textSize="22sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:text="VS"
                android:textColor="@color/orange"
                android:textSize="22sp"
                app:layout_constraintEnd_toStartOf="@+id/Team2_schedule"
                app:layout_constraintStart_toEndOf="@+id/Team1_schedule"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/Team2_schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team2"
                android:textColor="@color/black"
                android:textSize="22sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_team1"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/teamlogobasket"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/image_team2"
                app:layout_constraintStart_toEndOf="@+id/image_team1"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/dateSchedule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="27 April 2022"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/timeSchedule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="8 PM"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/placeSchedule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Gelora Bung Karno"
                    android:textColor="@color/black" />

            </LinearLayout>

            <ImageView
                android:id="@+id/image_team2"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/teamlogobasket"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>